<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="asiantech.internship.summer">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".menu.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="java-lang-programming"
                    android:scheme="android-app-google-plus-demo" />
            </intent-filter>
        </activity>
        <activity android:name=".activity_fragment.HomeActivity" />
        <activity android:name=".activity_fragment.ResultActivity" />
        <activity android:name=".ViewAndViewGruopActivity" />
        <activity android:name=".recyclerview.RecyclerViewActivity" />
        <activity android:name=".viewpager.PagerActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".broadcastandservice.BroadCastReceiverAndServiceActivity" />
        <activity android:name=".retrofitandgson.RestfulActivity" />
        <service
            android:name=".broadcastandservice.MusicSimplePlayerService"
            android:enabled="true" />
        <receiver android:name=".broadcastandservice.BroadCastReceiverAndServiceActivity$DurationReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action
                    android:name="asiantech.internship.summer.CLOSE_ACTION"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>