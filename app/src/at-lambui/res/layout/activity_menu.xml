<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/img_sea"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <Button
        android:id="@+id/btn_Swith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_normal"
        android:layout_marginRight="@dimen/font_normal"
        android:layout_marginLeft="@dimen/font_normal"
        android:textSize="@dimen/font_normal"
        android:background="@color/colorYellow"
        android:text="@string/bai2"/>
    <Button
        android:id="@+id/btn_Swith2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/font_normal"
        android:layout_marginLeft="@dimen/font_normal"
        android:textSize="@dimen/font_normal"
        android:background="@color/colorYellow"
        android:text="@string/bai3"/>

</LinearLayout>
