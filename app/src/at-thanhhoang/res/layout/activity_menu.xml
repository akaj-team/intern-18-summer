<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorBackgroundButtonMenuActivity"
            android:text="@string/label_view_view_group"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnRecycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorBackgroundButtonMenuActivity"
            android:text="@string/ex_recycler_view"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btnViewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ex_viewpager_tablayout"
            android:background="@color/colorBackgroundButtonMenuActivity"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
            android:textSize="20sp"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btnAsyncTaskThreadHandler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_asyncTask_thread_handler"
            android:background="@color/colorBackgroundButtonMenuActivity"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
            android:textSize="20sp"/>
    </LinearLayout>
</ScrollView>
