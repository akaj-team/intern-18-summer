<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="asiantech.internship.summer.async_task_thread_and_handler.AsyncTaskActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp"
        android:text="@string/async_task" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDownload1"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/imgDownload2"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/imgDownload3"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/imgDownload4"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/imgDownload5"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/imgDownload6"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
